<h1>Your Profile</h1>

<div class="borrowed-books-list">
  <h2>Borrowed Books</h2>
  <ul>
    <% @user.borrowed_books.each do |book| %>
      <div class="borrowed-book-item">
        <div >
        <li class="book-info">
          <%= book.title %> by <%= book.author %> 
          (Due: <%= book.borrowings.last.due_date %>)
        </li>
        
        <div class="due-date-info">
          <strong>Due In:</strong>
          <% borrowing = book.borrowings.last %>
          <%= (borrowing.due_date.to_date - Date.current).to_i %> days
        </div>
        </div>
        <%= button_to 'Return', return_book_path(book), method: :post, class:"return-btn" %>
      </div>
    <% end %>
  </ul>
</div>
